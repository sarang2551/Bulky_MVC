@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary text-center">
                <i class="bi bi-patch-plus-fill" style="font-size:1.4em"></i> Create new category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-stripped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-page-handler="delete" asp-route-id="@obj.Id" method="post">
                                <button class="btn btn-danger mx-2">
                                    <i class="bi bi-trash2-fill"></i> Delete
                                </button>
                            </form>

                        </div>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

