@model List<Category>
<partial name="_Notifications"/>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary text-center">
                <i class="bi bi-patch-plus-fill" style="font-size:1.4em"></i> Create new category
            </a>
        </div>
    </div>

<table class="table table-bordered table-stripped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                               <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form method="post">
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash2-fill"></i> Delete
                                </a>
                        </form>
                            
                    </div>

                    
                </td>
            </tr>
        }
    </tbody>
</table>
</div>